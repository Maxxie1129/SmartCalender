<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

	<LinearLayout
		android:id="@+id/buttons"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		android:background="#000000"
		android:padding="7dp">

	    
	    <Button
		    android:id="@+id/new_event_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="showAddEvent"
		    android:layout_weight="2"
		    android:background="@drawable/ic_action_new" />
	    
		
		<Button
		    android:id="@+id/list_event_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="showListEvent"
		    android:layout_weight="2"
		    android:background="@drawable/ic_action_paste" />
		
		<Button
		    android:id="@+id/edit_event_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    
		    android:layout_weight="2"
		    android:background="@drawable/ic_action_edit" />
		
		<Button
		    android:id="@+id/refresh_event_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    
		    android:layout_weight="2"
		    android:background="@drawable/ic_action_refresh" />
		
		<Button
		    android:id="@+id/direct_event_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="2"
		    android:background="@drawable/ic_action_directions" />
		
		
		<Button
		    android:id="@+id/share_event_btn"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="showCurDate"
		    android:layout_weight="1"
		    android:background="@drawable/ic_action_share" />

	</LinearLayout>
	
	<CalendarView
	    android:id="@+id/calendarView1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/buttons"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true" />

</RelativeLayout>